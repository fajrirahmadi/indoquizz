<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.noActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="normalEditText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="loginEditText" parent="normalEditText">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textCursorDrawable">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="normalButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="actionButtonGreen" parent="normalButton">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="normalTextViewWhite" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/font_lato_reguler</item>
    </style>

    <style name="normalTextViewBlack" parent="normalTextViewWhite">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:lineSpacingExtra">@dimen/margin_very_small</item>
    </style>

    <style name="headerTextView" parent="normalTextViewWhite">
        <item name="android:fontFamily">@font/font_lato_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="normalInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/normalInputLayout</item>
    </style>

    <style name="normalOldInputLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/normalInputLayout</item>
    </style>

    <style name="passwordInputLayout" parent="normalInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Line" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="Devider" parent="Line">
        <item name="android:layout_height">@dimen/margin_large</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ViewFullScreen" parent="Line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CardNormal" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="LoadingStyleGreen" parent="AVLoadingIndicatorView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="indicatorName">BallSpinFadeLoaderIndicator</item>
        <item name="indicatorColor">@color/colorPrimaryDark</item>
    </style>

</resources>
