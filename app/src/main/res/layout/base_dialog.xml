<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/CardNormal"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_margin="@dimen/no_margin">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:background="@color/white"
                      android:padding="@dimen/margin_medium"
                      android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_heading"
                    style="@style/headerTextView"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"/>

            <LinearLayout
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        style="@style/normalTextViewBlack"/>

                <RelativeLayout
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/image_medium"
                            android:layout_height="@dimen/image_medium"
                            android:layout_toStartOf="@+id/btn_ok"
                            android:layout_marginEnd="@dimen/margin_normal"
                            android:background="@drawable/ic_cancel"/>

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_ok"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ic_ok"
                            android:layout_width="@dimen/image_medium"
                            android:layout_height="@dimen/image_medium"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>